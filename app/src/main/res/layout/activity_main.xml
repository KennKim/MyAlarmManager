<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="activity"
            type="com.project.tki.myalarmmanager.MainActivity" />
    </data>


    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d9d9d9"
        tools:context="com.project.tki.myalarmmanager.MainActivity">

        <Button
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="@{activity::onClickAdmob}"
            android:layout_margin="20dp"
            android:backgroundTint="#13FDEA"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="go Admob"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:background="#55b90d3e"
            android:elevation="2dp"
            android:padding="5dp"
            android:text="Ready.."
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationZ="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    style="@style/Card"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Service Test : Music Play"  />

                        <LinearLayout
                            android:id="@+id/line1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            android:translationZ="5dp" >

                            <Button
                                android:id="@+id/btn_play"
                                style="@style/MyBtn"
                                android:onClick="@{activity::onClick}"
                                android:text="play" />

                            <Button
                                android:id="@+id/btn_stop"
                                style="@style/MyBtn"
                                android:onClick="@{activity::onClick}"
                                android:text="stop" />
                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <TextView
                    style="@style/MyTitle"
                    android:text="AlarmManager Test"  />

                <LinearLayout
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="start|center_vertical"
                    android:orientation="horizontal"
                    android:translationZ="5dp">

                    <Button
                        android:id="@+id/btn_Alarm"
                        style="@style/MyBtn"
                        android:onClick="@{activity::onClick}"
                        android:text="Alarm" />

                    <EditText
                        android:id="@+id/et_delay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="delay"
                        android:text="2000"
                        android:textSize="10sp" />


                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/sw_alarm"
                        style="@style/MySw"
                        android:layout_margin="20dp" />

                </LinearLayout>


                <TextView
                    style="@style/MyTitle"
                    android:text="Timer Test" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="start|center_vertical"
                    android:orientation="horizontal"
                    android:translationZ="5dp">


                    <Button
                        android:id="@+id/btn_timer"
                        style="@style/MyBtn"
                        android:onClick="@{activity::onClick}"
                        android:text="Timer" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/sw_timer"
                        style="@style/MySw" />


                </LinearLayout>


                <TextView
                    style="@style/MyTitle"
                    android:text="Date Picker" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="start|center_vertical"
                    android:orientation="horizontal"
                    android:translationZ="5dp">


                    <Button
                        android:id="@+id/btn_date"
                        style="@style/MyBtnVertical"
                        android:onClick="@{activity::onClick}"
                        android:text="Date" />


                    <Button
                        android:id="@+id/btn_date2"
                        style="@style/MyBtnVertical"
                        android:onClick="@{activity::onClick}"
                        android:text="Date_H" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/btn_time"
                        style="@style/MyBtnVertical"
                        android:onClick="@{activity::onClick}"
                        android:text="Time" />


                    <Button
                        android:id="@+id/btn_time2"
                        style="@style/MyBtnVertical"
                        android:onClick="@{activity::onClick}"
                        android:text="Time_H" />


                </LinearLayout>


                <TextView
                    style="@style/MyTitle"
                    android:text="Calendar" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="start|center_vertical"
                    android:orientation="horizontal"
                    android:translationZ="5dp">

                    <Button
                        android:id="@+id/btn_cal"
                        style="@style/MyBtn"
                        android:onClick="@{activity::onClick}"
                        android:text="Cal" />

                    <Button
                        android:id="@+id/btn_cal2"
                        style="@style/MyBtn"
                        android:onClick="@{activity::onClick}"
                        android:text="Material_cal" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tv_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="---- Status List ----" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </android.support.constraint.ConstraintLayout>
</layout>
